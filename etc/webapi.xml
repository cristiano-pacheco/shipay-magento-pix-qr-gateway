<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/shipay/webhook" method="POST">
        <service class="Shipay\PixQrGateway\Api\WebhookInterface" method="processNotification"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/shipay/wallets" method="GET">
        <service class="Shipay\PixQrGateway\Api\WalletsRepositoryInterface" method="getWallets"/>
        <resources>
            <resource ref="self" />
        </resources>
    </route>
</routes>
